generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id           String       @id @default(cuid())
  title        String
  category     String
  price        Int          @default(50)
  currency     String       @default("EUR")
  condition    String       @default("Good")
  image        String?
  description  String
  location     String       @default("Vilnius")
  availability Availability   @default(IN_STOCK)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

enum Availability {
  IN_STOCK
  SOLD
}
