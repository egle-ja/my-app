generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String       @id @default(cuid())
  title        String
  category     Category
  price        Int          @default(50)
  currency     String       @default("EUR")
  condition    Condition       @default(Good)
  image        String?
  description  String
  location     String       @default("Vilnius")
  availability Availability   @default(IN_STOCK)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

enum Availability {
  IN_STOCK
  SOLD
}

enum Category {
  Beds
  Tables
  Chairs
  Textiles
  Storage
}

enum Condition {
  Perfect
  Good
  Bad
}
